<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".ui.other.Contact"
    android:background="@color/lightblue">

    <androidx.constraintlayout.widget.ConstraintLayout
        android:id="@+id/joinl"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:orientation="vertical"
            android:layout_marginTop="20dp"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            android:background="@drawable/roundb">
        <androidx.core.widget.NestedScrollView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_margin="10dp"
            android:padding="20dp"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent">
            <androidx.constraintlayout.widget.ConstraintLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent">

                <Button
                    android:id="@+id/ctus"
                    android:layout_width="150dp"
                    android:layout_height="wrap_content"
                    android:layout_alignParentStart="true"
                    android:layout_alignParentEnd="true"
                    android:background="@drawable/roundbutton"
                    android:backgroundTint="@color/white"
                    android:text="Contact Us"
                    android:textAllCaps="true"
                    android:textColor="@color/colorBlack"
                    android:textSize="20dp"
                    app:layout_constraintEnd_toEndOf="parent"
                    app:layout_constraintStart_toStartOf="parent"
                    app:layout_constraintTop_toTopOf="parent" />

                <androidx.cardview.widget.CardView
                    android:id="@+id/cardView"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:padding="20dp"
                    app:layout_constraintTop_toBottomOf="@+id/ctus"
                    app:cardBackgroundColor="@color/lightblue"
                    app:cardCornerRadius="8dp">

                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_margin="10dp"
                        android:gravity="center"
                        android:orientation="vertical"
                        android:padding="10dp">


                        <EditText
                            android:id="@+id/nameTextView"
                            android:layout_width="match_parent"
                            android:layout_height="50dp"
                            android:layout_marginTop="20dp"
                            android:layout_marginBottom="10dp"
                            android:background="@drawable/button_subscribe"
                            android:backgroundTint="@color/white"
                            android:ems="20"
                            android:hint="@string/name"
                            android:paddingLeft="20dp"
                            android:textColor="@color/dark" />

                        <EditText
                            android:id="@+id/email"
                            android:layout_width="match_parent"
                            android:layout_height="50dp"
                            android:layout_marginBottom="10dp"
                            android:background="@drawable/button_subscribe"
                            android:backgroundTint="@color/white"
                            android:ems="20"
                            android:hint="@string/name"
                            android:paddingLeft="20dp"
                            android:textColor="@color/dark"
                            android:visibility="gone" />

                        <EditText
                            android:id="@+id/yourcontact"
                            android:layout_width="match_parent"
                            android:layout_height="50dp"
                            android:layout_marginBottom="10dp"
                            android:background="@drawable/button_subscribe"
                            android:backgroundTint="@color/white"
                            android:ems="20"
                            android:hint="@string/mobile"
                            android:paddingLeft="20dp"
                            android:phoneNumber="true"
                            android:textColor="@color/dark" />

                        <EditText
                            android:id="@+id/subj"
                            android:layout_width="match_parent"
                            android:layout_height="50dp"
                            android:layout_marginBottom="10dp"
                            android:background="@drawable/button_subscribe"
                            android:backgroundTint="@color/white"
                            android:ems="20"
                            android:hint="@string/subject"
                            android:paddingLeft="20dp"
                            android:textColor="@color/dark" />


                        <EditText
                            android:id="@+id/descriptionTextView"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:layout_marginBottom="10dp"
                            android:background="@color/white"
                            android:ems="20"
                            style="@style/Theme_AlertDialog"
                            android:gravity="center_horizontal|left|top"
                            android:hint="Detail"
                            android:minHeight="100dp"
                            android:padding="10dp"
                            android:paddingLeft="20dp"
                            android:textColor="@color/dark" />


                        <Button
                            android:id="@+id/submit"
                            android:layout_width="150dp"
                            android:layout_height="wrap_content"
                            android:layout_marginTop="30dp"
                            android:background="@drawable/roundbutton"
                            android:backgroundTint="@color/white"
                            android:text="Submit"
                            android:textAllCaps="true"
                            android:textColor="@color/colorPrimary"
                            android:textSize="20dp" />

                        <Button
                            android:id="@+id/clear"
                            android:layout_width="fill_parent"
                            android:layout_height="wrap_content"
                            android:layout_marginTop="10dp"
                            android:background="@null"
                            android:text="Reset All "
                            android:textAllCaps="false"
                            android:textColor="@color/colorPrimary" />
                    </LinearLayout>
                </androidx.cardview.widget.CardView>
            </androidx.constraintlayout.widget.ConstraintLayout>


        </androidx.core.widget.NestedScrollView>
        </LinearLayout>

    </androidx.constraintlayout.widget.ConstraintLayout>


</androidx.constraintlayout.widget.ConstraintLayout>